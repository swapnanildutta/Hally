<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="35sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_image_shape"
            android:src="@drawable/search_black_icon"
            />

        <RelativeLayout
            android:id="@+id/setting_rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginTop="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Settings_UserImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_shape"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/Settings_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_toEndOf="@+id/Settings_UserImage"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See your profile"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/Settings_UserImage"
                android:layout_below="@+id/Settings_UserName"
                android:layout_marginStart="10dp"
                />

        </RelativeLayout>

        <View
            android:id="@+id/Settings_View1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/darker_gray"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/setting_rl1"
            />

        <RelativeLayout
            android:id="@+id/Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Settings_View1">

            <TextView
                android:id="@+id/Under_Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:id="@+id/Under_Account_rl1"
                android:layout_below="@+id/Under_Account"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/security_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy and Safety"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/Settings_View2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/Account"
            />

        <RelativeLayout
            android:id="@+id/General"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Settings_View2">

            <TextView
                android:id="@+id/Under_General"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:id="@+id/Under_General_rl1"
                android:layout_below="@+id/Under_General"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/app_update_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Update"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Under_General_rl2"
                android:layout_below="@+id/Under_General_rl1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/language_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Under_General_rl3"
                android:layout_below="@+id/Under_General_rl2"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/call_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacts Update"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Under_General_rl4"
                android:layout_below="@+id/Under_General_rl3"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/data_saver_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Saver"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Under_General_rl5"
                android:layout_below="@+id/Under_General_rl4"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/applogo"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subscribe Hally"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Under_General_rl6"
                android:layout_below="@+id/Under_General_rl5"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/applogo"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Un-Subscribe Hally"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    />

            </RelativeLayout>


        </RelativeLayout>

        <View
            android:id="@+id/Settings_View3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/General"
            />

        <RelativeLayout
            android:id="@+id/Support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Settings_View3">

            <TextView
                android:id="@+id/Under_Support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:id="@+id/Under_Support_rl1"
                android:layout_below="@+id/Under_Support"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/help_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help Center"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Under_Support_rl2"
                android:layout_below="@+id/Under_Support_rl1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/safety_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safety Center"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Under_Support_rl3"
                android:layout_below="@+id/Under_Support_rl2"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bug_report_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report Bugs"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    />

            </RelativeLayout>


        </RelativeLayout>

        <View
            android:id="@+id/Settings_View4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/Support"
            />

        <RelativeLayout
            android:id="@+id/About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Settings_View4">

            <TextView
                android:id="@+id/Under_About"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                />

            <RelativeLayout
                android:id="@+id/Under_About_rl1"
                android:layout_below="@+id/Under_About"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/terms_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms of Use"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Under_About_rl2"
                android:layout_below="@+id/Under_About_rl1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/community_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Community Guidelines"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Under_About_rl3"
                android:layout_below="@+id/Under_About_rl2"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/data_policy_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Policy"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    />

            </RelativeLayout>


        </RelativeLayout>

        <View
            android:id="@+id/Settings_View5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/About"
            />

        <RelativeLayout
            android:id="@+id/Logout"
            android:layout_below="@+id/Settings_View5"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/logout_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="60dp"
                />

        </RelativeLayout>



    </RelativeLayout>


</ScrollView>